<ContentView Padding="20">
    <StackLayout Margin="new Thickness(20)">

        <Label Text="Il gioco del TRIS!"
               FontSize="40" />

        <Grid>
            <Layout>
                <RowDefinition GridUnitType="GridUnitType.Star" />
                <RowDefinition GridUnitType="GridUnitType.Star" />
                <RowDefinition GridUnitType="GridUnitType.Star" />
                <ColumnDefinition GridUnitType="GridUnitType.Star" />
                <ColumnDefinition GridUnitType="GridUnitType.Star" />
                <ColumnDefinition GridUnitType="GridUnitType.Star" />
            </Layout>
            <Contents>
                @for (int i = 0; i < 3; i++)
                {
                    for (int j = 0; j < 3; j++)
                    {
                        <GridCell Row="@i" Column="@j">
                            <Cella GiocatoreCorrente="@giocatoreCorrente"
                                   OnCellaSelezionata="CellaSelezionata" />
                        </GridCell>
                    }
                }
            </Contents>
        </Grid>

    </StackLayout>
</ContentView>

@code {
    string giocatoreCorrente = "X";

    void CellaSelezionata()
    {
        giocatoreCorrente = giocatoreCorrente == "X" ? "O" : "X";
    }

}